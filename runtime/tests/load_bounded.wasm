%core "0100"
%name "Test load food"
%version "1"
%class "black"

; Ant visible set to 5
; Border is true
;
;   0123456789ABCDE
;  +---------------+
; 0|·S··F··X       |
; 1|··C·····       |
; 2|··¤·····     f |
; 3|··X····W      x|
; 4|········       |
; 5|F······     Q  |
; 6|···Z···        |
; 7| ···Ff         |
; 8|               |
; 9|   x           |
; A|         w     |
; B|               |
; C|  f         f  |
; D|               |
; E|     C         |
;  +---------------+
;
;
; 0x40..0x4f position of food/allies/enemies

.Test_FOOD
    inc   [30h]
    ; food on <4, 0>
    mov   [40h], 4
    mov   [41h], 0
    ; food on <0, 5>
    mov   [42h], 0
    mov   [43h], 5
    ; food on <5, 7>
    mov   [44h], 4
    mov   [45h], 7
    
    ; count of food
    mov   rc, [07h]
    jf    abort
    dec   rc
    eq    rc, 2
    jf    abort
    xor   r0, r0
    
begin_loop:
    ldfd  rc
    eq    <1Ch>, <40h>
    jf    check_2
    or    r0, 1
    jmp   end_loop
check_2:
    eq    <1Ch>, <42h>
    jf    check_3
    or    r0, 2
    jmp   end_loop
check_3:
    eq    <1Ch>, <44h>
    jf    abort
    or    r0, 4
end_loop:
    loop  begin_loop
    
    eq    r0, 07h
    jf    abort
    RET
    
abort:
    mov   [31h], 0
    RET


.Test_ALLY
    inc   [30h]
    ; ally solder on <1, 1>
    mov   [40h], 1
    mov   [41h], 0
    ; ally worker on <7, 3>
    mov   [42h], 7
    mov   [43h], 3
    
    ; count of allies
    mov   rc, [05h]
    jf    abort
    dec   rc
    eq    rc, 1
    jf    abort
    xor   r0, r0
    
begin_loop:
    ldal  rc
    eq    <19h>, <40h>
    jf    check_2
    eq    [18h], 11F4h  ; Solder 1000h + half health 01F4h
    jf    abort
    or    r0, 1
    jmp   end_loop
check_2:
    eq    <19h>, <42h>
    jf    abort
    eq    [18h], 23E8h ; Worker 2000h + full health 03E8h
    jf    abort
    or    r0, 2
end_loop:
    loop  begin_loop
    
    eq    r0, 03h
    jf    abort
    RET
    
abort:
    mov   [31h], 0
    RET


.Test_ENEMY
    inc   [30h]
    ; enemy solder on <7, 0>
    mov   [40h], 7
    mov   [41h], 0
    ; enemy worker on <2, 1>
    mov   [42h], 2
    mov   [43h], 1
    ; enemy solder on <2, 3>
    mov   [44h], 2
    mov   [45h], 3
    ; enemy queen on <3, 6>
    mov   [46h], 3
    mov   [47h], 6
    
    ; count of enemies
    mov   rc, [06h]
    jf    abort
    dec   rc
    eq    rc, 3
    jf    abort
    xor   r0, r0
    
begin_loop:
    lden  rc
    eq    <15h>, <40h>
    jf    check_2
    eq    [14h], 13E8h  ; Solder 1000h + full health 03E8h
    jf    abort
    or    r0, 1
    jmp   end_loop
check_2:
    eq    <15h>, <42h>
    jf    check_3
    eq    [14h], 23E8h  ; Worker 2000h + full health 03E8h
    jf    abort
    or    r0, 2
    jmp   end_loop
check_3:
    eq    <15h>, <44h>
    jf    check_4
    eq    [14h], 10FAh  ; Solder 1000h + quarte health 00FAh
    jf    abort
    or    r0, 4
    jmp   end_loop
check_4:
    eq    <15h>, <46h>
    jf    abort
    eq    [14h], 02EEh ; Quuen 0000h + three quarters health 02EEh
    jf    abort
    or    r0, 8
end_loop:
    loop  begin_loop
    
    eq    r0, 0fh
    jf    abort
    RET
    
abort:
    mov   [31h], 0
    RET


.Worker
    mov   [30h], 0
    mov   [31h], 1
    call  Test_FOOD
    eq    [31h], 0
    jt    abort
    call  Test_ALLY
    eq    [31h], 0
    jt    abort
    call  Test_ENEMY
    eq    [31h], 0
    jt    abort
abort:
    RET

.Solder
    RET

.Queen
    RET
